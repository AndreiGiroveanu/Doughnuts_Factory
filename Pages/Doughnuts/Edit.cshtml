@page
@model DoughnutsFactory.Pages.Doughnuts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Doughnut</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Doughnut.ID" />
            <div class="form-group">
                <label asp-for="Doughnut.Type" class="control-label"></label>
                <input asp-for="Doughnut.Type" class="form-control" />
                <span asp-validation-for="Doughnut.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doughnut.Flavours" class="control-label"></label>
                <input asp-for="Doughnut.Flavours" class="form-control" />
                <span asp-validation-for="Doughnut.Flavours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doughnut.Price" class="control-label"></label>
                <input asp-for="Doughnut.Price" class="form-control" />
                <span asp-validation-for="Doughnut.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

